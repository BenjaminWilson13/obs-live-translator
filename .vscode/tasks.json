	"version": "2.0.0",
	"tasks": [
		{
			"label": "watcher",
			"type": "shell",
			"command": "npm run watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"isBackground": true,
			"group": "build",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}